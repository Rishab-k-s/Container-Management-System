{
  "name": "container-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "Container Management System with Meteor and Docker",
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:auth": "playwright test tests/e2e/01-authentication.spec.js",
    "test:e2e:services": "playwright test tests/e2e/02-service-selection.spec.js",
    "test:e2e:containers": "playwright test tests/e2e/03-container-management.spec.js",
    "test:e2e:vm": "playwright test tests/e2e/04-vm-terminal.spec.js",
    "test:e2e:integration": "playwright test tests/e2e/05-integration.spec.js",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:all": "npm run test && npm run test:e2e",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.5",
    "@swc/helpers": "^0.5.17",
    "argon2": "^0.44.0",
    "dockerode": "^4.0.9",
    "meteor-node-stubs": "^1.2.12",
    "node-gyp-build": "^4.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ssh2": "^1.17.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js",
    "modern": true
  },
  "keywords": [
    "meteor",
    "docker",
    "container-management",
    "e2e",
    "testing",
    "playwright"
  ],
  "author": "",
  "license": "MIT"
}
